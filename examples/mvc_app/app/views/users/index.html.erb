<div class="border-b border-gray-200 pb-5 sm:flex sm:items-center sm:justify-between">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
        Team Members
    </h3>
    <div class="mt-3 sm:mt-0 sm:ml-4">
        <span class="inline-flex rounded-md shadow-sm">
            <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-primary hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition ease-in-out duration-150">
                Add Member
            </button>
        </span>
    </div>
</div>

<div class="mt-8 grid gap-5 max-w-lg mx-auto lg:grid-cols-3 lg:max-w-none">
    <% if users.length > 0 %>
        <% for user in users %>
            <div class="flex flex-col rounded-lg shadow-lg overflow-hidden bg-white transition transform hover:-translate-y-1 hover:shadow-xl">
                <div class="flex-1 p-6 flex flex-col justify-between">
                    <div class="flex-1">
                        <div class="flex items-center justify-center">
                            <img class="h-24 w-24 rounded-full ring-4 ring-indigo-50" src="<%= user["avatar_url"] %>" alt="<%= user["name"] %>">
                        </div>
                        <div class="mt-4 text-center">
                            <p class="text-xl font-semibold text-gray-900">
                                <%= user["name"] %>
                            </p>
                            <p class="text-sm font-medium text-indigo-600">
                                <%= user["role"] %>
                            </p>
                            <p class="mt-3 text-base text-gray-500">
                                <%= user["email"] %>
                            </p>
                        </div>
                    </div>
                    <div class="mt-6 flex items-center justify-center">
                        <div class="flex-shrink-0">
                            <a href="/users/<%= user["id"] %>" class="flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-primary bg-indigo-100 hover:bg-indigo-200">
                                View Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    <% else %>
        <p class="col-span-3 text-center text-gray-500 py-10">No users found.</p>
    <% end %>
</div>