<!-- Profile Page -->
<div class="max-w-4xl mx-auto py-12 px-4">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-white">Your Profile</h1>
            <p class="mt-1 text-gray-400">Manage your account settings</p>
        </div>
        <a href="/users/logout" class="inline-flex items-center gap-2 px-4 py-2 bg-red-500/10 border border-red-500/20 text-red-400 hover:bg-red-500/20 rounded-xl transition-all">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Sign Out
        </a>
    </div>

    <!-- Session Info Card -->
    <div class="bg-white/5 backdrop-blur-xl rounded-2xl border border-white/10 p-6 mb-6">
        <h2 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
            </svg>
            Session Information
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-white/5 rounded-xl p-4">
                <span class="text-xs text-gray-500 uppercase tracking-wider">Session ID</span>
                <p class="mt-1 text-sm text-gray-300 font-mono break-all"><%= session_id() %></p>
            </div>
            <div class="bg-white/5 rounded-xl p-4">
                <span class="text-xs text-gray-500 uppercase tracking-wider">Authenticated</span>
                <p class="mt-1"><%= if session_get("authenticated") == true then '<span class="text-emerald-400">Yes</span>' else '<span class="text-red-400">No</span>' end %></p>
            </div>
        </div>
    </div>

    <!-- User Profile Card -->
    <div class="bg-white/5 backdrop-blur-xl rounded-2xl border border-white/10 p-6">
        <h2 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            User Details
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <span class="text-xs text-gray-500 uppercase tracking-wider">Username</span>
                <p class="mt-1 text-lg text-white"><%= session_get("user") or "Guest" %></p>
            </div>
            <div>
                <span class="text-xs text-gray-500 uppercase tracking-wider">Email</span>
                <p class="mt-1 text-lg text-white"><%= session_get("email") or "Not set" %></p>
            </div>
            <div>
                <span class="text-xs text-gray-500 uppercase tracking-wider">Role</span>
                <p class="mt-1"><span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-500/20 text-indigo-300"><%= session_get("role") or "user" %></span></p>
            </div>
            <div>
                <span class="text-xs text-gray-500 uppercase tracking-wider">User ID</span>
                <p class="mt-1 text-gray-300 font-mono"><%= session_get("user_id") or "N/A" %></p>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-4">
        <a href="/users/edit" class="bg-white/5 hover:bg-white/10 border border-white/10 hover:border-white/20 rounded-xl p-6 transition-all group">
            <div class="flex items-center gap-4">
                <div class="p-3 bg-indigo-500/10 rounded-xl text-indigo-400 group-hover:bg-indigo-500/20 transition-colors">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                </div>
                <div>
                    <h3 class="font-medium text-white">Edit Profile</h3>
                    <p class="text-sm text-gray-400">Update your details</p>
                </div>
            </div>
        </a>

        <a href="/users/regenerate-session" class="bg-white/5 hover:bg-white/10 border border-white/10 hover:border-white/20 rounded-xl p-6 transition-all group">
            <div class="flex items-center gap-4">
                <div class="p-3 bg-purple-500/10 rounded-xl text-purple-400 group-hover:bg-purple-500/20 transition-colors">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                </div>
                <div>
                    <h3 class="font-medium text-white">Regenerate Session</h3>
                    <p class="text-sm text-gray-400">New session ID</p>
                </div>
            </div>
        </a>

        <a href="/docs/sessions" class="bg-white/5 hover:bg-white/10 border border-white/10 hover:border-white/20 rounded-xl p-6 transition-all group">
            <div class="flex items-center gap-4">
                <div class="p-3 bg-teal-500/10 rounded-xl text-teal-400 group-hover:bg-teal-500/20 transition-colors">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                </div>
                <div>
                    <h3 class="font-medium text-white">Session Docs</h3>
                    <p class="text-sm text-gray-400">Learn more</p>
                </div>
            </div>
        </a>
    </div>
</div>
