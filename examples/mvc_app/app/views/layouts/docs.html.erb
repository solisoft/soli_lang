        /* Code block styling */
        pre, code, .hljs {
            margin: 0 !important;
            padding: 0 !important;
            background: transparent !important;
        }

        pre code.hljs {
            font-size: 0.875rem;
            line-height: 1.75;
            font-family: 'JetBrains Mono', monospace;
        }

        /* Inline code styling */
        :not(pre) > code {
            background: rgba(99, 102, 241, 0.15);
            color: #a5b4fc;
            padding: 0.2rem 0.5rem;
            border-radius: 0.375rem;
            font-size: 0.875em;
            font-weight: 500;
        }


        /* Prose customization */
        .prose :where(code):not(:where([class~="not-prose"] *))::before { content: "" !important; }
        .prose :where(code):not(:where([class~="not-prose"] *))::after { content: "" !important; }

        .prose h1, .prose h2, .prose h3, .prose h4 {
            color: white;
            font-weight: 600;
            scroll-margin-top: 5rem;
        }

        .prose h1 { font-size: 2.25rem; margin-top: 0; }
        .prose h2 {
            font-size: 1.5rem;
            margin-top: 3rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .prose h3 { font-size: 1.25rem; margin-top: 2rem; }

        .prose p { color: #9ca3af; line-height: 1.75; }
        .prose a { color: #818cf8; text-decoration: none; }
        .prose a:hover { color: #a5b4fc; text-decoration: underline; }

        .prose ul, .prose ol { color: #9ca3af; }
        .prose li::marker { color: #6366f1; }

        .prose strong { color: white; font-weight: 600; }

        .prose blockquote {
            border-left: 4px solid #6366f1;
            background: rgba(99, 102, 241, 0.1);
            padding: 1rem 1.5rem;
            border-radius: 0 0.5rem 0.5rem 0;
            margin: 1.5rem 0;
        }
        .prose blockquote p { color: #c4b5fd; margin: 0; }

        /* Table styling */
        .prose table {
            width: 100%;
            border-collapse: collapse;
            margin: 1.5rem 0;
        }
        .prose th {
            background: rgba(99, 102, 241, 0.1);
            color: white;
            padding: 0.75rem 1rem;
            text-align: left;
            font-weight: 600;
            border-bottom: 2px solid rgba(99, 102, 241, 0.3);
        }
        .prose td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid rgba(255,255,255,0.05);
            color: #9ca3af;
        }
        .prose tr:hover td {
            background: rgba(255,255,255,0.02);
        }

        /* Sidebar animation */
        .sidebar-link {
            position: relative;
            transition: all 0.2s ease;
        }
        .sidebar-link::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 3px;
            height: 0;
            background: linear-gradient(to bottom, #6366f1, #a855f7);
            border-radius: 0 2px 2px 0;
            transition: height 0.2s ease;
        }
        .sidebar-link.active::before,
        .sidebar-link:hover::before {
            height: 60%;
        }

        /* Mobile menu animation */
        .mobile-menu {
            transform: translateX(-100%);
            transition: transform 0.3s ease;
        }
        .mobile-menu.open {
            transform: translateX(0);
        }

        /* Tip/Warning/Info boxes */
        .callout {
            border-radius: 0.75rem;
