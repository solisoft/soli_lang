<div class="relative bg-white overflow-hidden shadow-xl sm:rounded-lg">
    <div class="absolute inset-0">
        <img class="h-full w-full object-cover" src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-1.2.1&auto=format&fit=crop&w=2850&q=80" alt="Team working">
        <div class="absolute inset-0 bg-gradient-to-r from-primary to-purple-600 mix-blend-multiply opacity-90"></div>
    </div>
    <div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">Soli MVC Framework</h1>
        <p class="mt-6 text-xl text-indigo-100 max-w-3xl">
            Build fast, reliable, and scalable web applications with Solilang. 
            <%= message %>
        </p>
        <div class="mt-10 max-w-sm sm:flex sm:max-w-none">
            <div class="space-y-4 sm:space-y-0 sm:mx-auto sm:inline-grid sm:grid-cols-2 sm:gap-5">
                <a href="/users" class="flex items-center justify-center px-4 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-primary bg-white hover:bg-indigo-50 sm:px-8">
                    View Users
                </a>
                <a href="/about" class="flex items-center justify-center px-4 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-500 bg-opacity-60 hover:bg-opacity-70 sm:px-8">
                    Learn More
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="mt-10">
    <h3 class="text-lg leading-6 font-medium text-gray-900">System Overview</h3>
    <dl class="mt-5 grid grid-cols-1 gap-5 sm:grid-cols-3">
        <div class="px-4 py-5 bg-white shadow rounded-lg overflow-hidden sm:p-6 transition transform hover:-translate-y-1 hover:shadow-lg">
            <dt class="text-sm font-medium text-gray-500 truncate">Active Users</dt>
            <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= stats["active_users"] %></dd>
        </div>
        <div class="px-4 py-5 bg-white shadow rounded-lg overflow-hidden sm:p-6 transition transform hover:-translate-y-1 hover:shadow-lg">
            <dt class="text-sm font-medium text-gray-500 truncate">Requests Today</dt>
            <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= stats["requests_today"] %></dd>
        </div>
        <div class="px-4 py-5 bg-white shadow rounded-lg overflow-hidden sm:p-6 transition transform hover:-translate-y-1 hover:shadow-lg">
            <dt class="text-sm font-medium text-gray-500 truncate">Server Uptime</dt>
            <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= stats["server_uptime"] %></dd>
        </div>
    </dl>
</div>

