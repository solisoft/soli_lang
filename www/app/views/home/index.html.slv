<script>
    // Send tick events to metrics LiveView with FPS tracking
    document.addEventListener('DOMContentLoaded', () => {
        // FPS tracking
        let frameCount = 0;
        let lastFpsUpdate = performance.now();
        let currentFps = 0;

        function updateFpsDisplay() {
            const fpsEl = document.getElementById('fps-counter');
            if (fpsEl) {
                fpsEl.textContent = currentFps + ' fps';
            }
            const fpsStat = document.getElementById('fps-stat');
            if (fpsStat) {
                fpsStat.textContent = currentFps;
            }
        }

        setTimeout(() => {
            console.log('SoliLiveView:', window.SoliLiveView);
            console.log('instances:', window.SoliLiveView ? window.SoliLiveView.instances : 'N/A');
            if (window.SoliLiveView && window.SoliLiveView.instances) {
                window.SoliLiveView.instances.forEach(lv => {
                    console.log('LV url:', lv.socketUrl, 'state:', lv.state);
                    if (lv.socketUrl && lv.socketUrl.includes('metrics')) {
                        // Track actual FPS from patches received
                        lv.on('patch', () => {
                            frameCount++;
                            const now = performance.now();
                            const elapsed = now - lastFpsUpdate;
                            if (elapsed >= 1000) {
                                currentFps = Math.round(frameCount * 1000 / elapsed);
                                frameCount = 0;
                                lastFpsUpdate = now;
                                updateFpsDisplay();
                            }
                        });

                        const startTicking = () => {
                            setInterval(() => {
                                lv.send({ type: 'event', event: 'tick', liveview_id: lv.liveviewId, params: {}, target: 'metrics' });
                            }, 50); // 20 updates/sec
                        };

                        if (lv.state === 2) {
                            startTicking();
                        } else {
                            lv.on('stateChanged', (state) => {
                                if (state === 2) {
                                    startTicking();
                                }
                            });
                        }
                    }
                });
            }
        }, 1000);
    });
</script>

<script>
    // Simplified script for index page interactions
    function switchTab(tab) {
        // Content
        ['model', 'view', 'controller'].forEach(t => {
            const el = document.getElementById('content-' + t);
            if (t === tab) {
                el.classList.remove('hidden');
            } else {
                el.classList.add('hidden');
            }
        });

        // Tabs
        ['model', 'view', 'controller'].forEach(t => {
            const btn = document.getElementById('tab-' + t);
            if (t === tab) {
                btn.className = "px-3 py-1 text-xs font-medium rounded-md transition-all text-white bg-white/10 shadow-sm";
            } else {
                btn.className = "px-3 py-1 text-xs font-medium rounded-md transition-all text-gray-400 hover:text-white hover:bg-white/5";
            }
        });

        // Filename
        const filenames = {
            'model': 'app/models/post.sl',
            'view': 'app/views/posts/index.html.slv',
            'controller': 'app/controllers/posts_controller.sl'
        };
        document.getElementById('filename-display').textContent = filenames[tab];
    }

    // Typing Animation
    document.addEventListener('DOMContentLoaded', () => {
        const typeElements = document.querySelectorAll('.type-animation');
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const el = entry.target;
                    if (!el.dataset.typed) {
                        el.dataset.typed = "true";
                        typeText(el);
                    }
                }
            });
        }, { threshold: 0.5 });

        typeElements.forEach(el => observer.observe(el));

        function typeText(element) {
            const html = element.innerHTML;
            element.innerHTML = '';
            element.classList.remove('invisible');
            
            let i = 0;
            let tag = false;
            let currentHtml = '';
            
            function type() {
                if (i < html.length) {
                    let char = html.charAt(i);
                    
                    if (char === '<') {
                        tag = true;
                    } else if (char === '>') {
                        tag = false;
                    }
                    
                    currentHtml += char;
                    element.innerHTML = currentHtml; // + (tag ? '' : '<span class="animate-pulse">|</span>');
                    
                    i++;
                    if (tag || char === ' ') {
                        type(); // Skip delay for tags and spaces to make it faster
                    } else {
                        setTimeout(type, Math.random() * 20 + 10);
                    }
                } else {
                    // element.innerHTML = html; // Remove cursor at end
                }
            }
            
            type();
        }
    });
</script>

