            }
        });

        // Start/stop real-time updates based on active tab
        if (demo === 'realtime') {
            startRealtimeDemo();
        } else {
            stopRealtimeDemo();
        }
    }

    // Counter Demo
    let counterValue = 0;
    function updateCounterDisplay() {
        const el = document.getElementById('live-counter-value');
        el.style.transform = 'scale(1.1)';
        el.textContent = counterValue;
        setTimeout(() => el.style.transform = 'scale(1)', 100);
    }
    function incrementCounter() {
        counterValue++;
        updateCounterDisplay();
    }
    function decrementCounter() {
        counterValue--;
        updateCounterDisplay();
    }

    // Real-time Demo
    let realtimeInterval = null;
    let updateRate = 1000; // ms between updates (1/s default)
    let updateCount = 0;
    let lastSecond = Date.now();

    function startRealtimeDemo() {
        if (realtimeInterval) return;
        updateCount = 0;
        lastSecond = Date.now();
        realtimeInterval = setInterval(updateRealtimeMetrics, updateRate);
    }

    function stopRealtimeDemo() {
        if (realtimeInterval) {
            clearInterval(realtimeInterval);
            realtimeInterval = null;
        }
    }

    function setUpdateRate(rate) {
        updateRate = rate;
        // Update button styles
        [1000, 100, 50, 16].forEach(r => {
            const btn = document.getElementById('rate-' + r);
            if (r === rate) {
                btn.className = 'px-3 py-1 text-xs rounded-lg bg-indigo-500 text-white transition-all';
            } else {
                btn.className = 'px-3 py-1 text-xs rounded-lg bg-white/5 text-gray-400 hover:bg-white/10 transition-all border border-white/10';
            }
        });
        // Restart with new rate
        if (realtimeInterval) {
            stopRealtimeDemo();
            startRealtimeDemo();
        }
    }

    function updateRealtimeMetrics() {
        updateCount++;
        const now = Date.now();

        // Update per-second counter
        if (now - lastSecond >= 1000) {
            document.getElementById('updates-per-sec').textContent = updateCount + ' updates/s';
            updateCount = 0;
            lastSecond = now;
        }

        // Update clock with milliseconds
        const d = new Date();
        const time = d.toTimeString().split(' ')[0] + '.' + String(d.getMilliseconds()).padStart(3, '0');
        document.getElementById('live-clock').textContent = time;

        // Simulate fluctuating metrics
        const cpu = Math.floor(30 + Math.sin(now / 1000) * 20 + Math.random() * 15);
        const memory = Math.floor(512 + Math.sin(now / 2000) * 100 + Math.random() * 50);
        const requests = Math.floor(1500 + Math.sin(now / 500) * 500 + Math.random() * 200);
        const latency = Math.max(1, Math.floor(5 + Math.sin(now / 800) * 3 + Math.random() * 2));

        document.getElementById('metric-cpu').textContent = cpu;
        document.getElementById('bar-cpu').style.width = cpu + '%';

        document.getElementById('metric-memory').textContent = memory;
        document.getElementById('bar-memory').style.width = (memory / 1024 * 100) + '%';

        document.getElementById('metric-requests').textContent = requests;
        document.getElementById('bar-requests').style.width = (requests / 3000 * 100) + '%';

        document.getElementById('metric-latency').textContent = latency;
        document.getElementById('bar-latency').style.width = (latency / 20 * 100) + '%';
    }

    // Clean up on page unload
    window.addEventListener('beforeunload', stopRealtimeDemo);
</script>

