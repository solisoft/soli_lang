    <!-- Scripts -->
    <script>
    // Search index will be loaded dynamically
    let searchIndex = null;
    let fuse = null;

    // Load search index
    fetch('/js/search-index.json')
        .then(r => r.json())
        .then(data => {
            searchIndex = data.entries;
            fuse = new Fuse(searchIndex, {
                keys: ['title', 'signature', 'description', 'keywords'],
                threshold: 0.3,
                includeMatches: true
            });
        })
        .catch((e) => console.log('Search index not available', e));

    function openSearchModal() {
        document.getElementById('searchModal').classList.add('open');
        document.getElementById('searchInput').focus();
        document.body.classList.add('overflow-hidden');
    }

    function closeSearchModal(e) {
        if (e && e.target !== document.getElementById('searchModal')) return;
        document.getElementById('searchModal').classList.remove('open');
        document.body.classList.remove('overflow-hidden');
    }

    function handleSearch(query) {
        const resultsEl = document.getElementById('searchResults');
        if (!fuse || !query.trim()) {
            resultsEl.innerHTML = '<div class="text-center py-8 text-gray-500">Type to search...</div>';
            return;
        }

        const results = fuse.search(query).slice(0, 10);
        if (results.length === 0) {
            resultsEl.innerHTML = '<div class="text-center py-8 text-gray-500">No results found</div>';
            return;
        }

        resultsEl.innerHTML = results.map(r => {
            const item = r.item;
            const typeColors = {
                function: 'bg-blue-500/20 text-blue-400',
                keyword: 'bg-purple-500/20 text-purple-400',
                operator: 'bg-amber-500/20 text-amber-400',
                type: 'bg-green-500/20 text-green-400',
                page: 'bg-gray-500/20 text-gray-400'
            };
            const color = typeColors[item.type] || typeColors.page;
            return `
                <a href="${item.path}" onclick="closeSearchModal({ target: document.getElementById('searchModal') })" class="block p-3 rounded-lg hover:bg-white/5 transition-colors">
                    <div class="flex items-center gap-2 mb-1">
                        <span class="px-2 py-0.5 text-xs rounded ${color}">${item.type}</span>
                        <span class="font-medium text-white">${item.title}</span>
                    </div>
                    ${item.signature ? `<code class="text-sm text-indigo-400">${item.signature}</code>` : ''}
                    <p class="text-sm text-gray-500 mt-1">${item.description || item.category}</p>
                </a>
            `;
        }).join('');
    }

    // Keyboard shortcuts
    document.addEventListener('keydown', (e) => {
        if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
            e.preventDefault();
            openSearchModal();
        }
        if (e.key === 'Escape') {
            closeSearchModal({ target: document.getElementById('searchModal') });
        }
    });

    function toggleMobileMenu() {
        const sidebar = document.getElementById('mobileSidebar');
        const overlay = document.getElementById('mobileMenuOverlay');
        const isOpening = !sidebar.classList.contains('open');

        sidebar.classList.toggle('open');
        overlay.classList.toggle('hidden');
        document.body.classList.toggle('overflow-hidden');

        // Scroll to active item when opening mobile menu
        if (isOpening) {
            const activeLink = sidebar.querySelector('.sidebar-link.active');
            if (activeLink) {
                setTimeout(() => {
                    const sidebarRect = sidebar.getBoundingClientRect();
                    const linkRect = activeLink.getBoundingClientRect();
                    const offset = linkRect.top - sidebarRect.top - (sidebarRect.height / 2) + (linkRect.height / 2);
                    sidebar.scrollTop = offset;
                }, 100);
            }
        }
    }

    // SoliLang language definition for highlight.js
    hljs.registerLanguage('soli', function() {
        return {
            name: 'SoliLang',
            aliases: ['soli'],
            keywords: {
                keyword: 'fn if else elsif end return let for in while do break continue class extends static this super new import use as try catch throw export const match',
                literal: 'null true false',
                built_in: 'print println datetime now hash_password validate_token redirect error json_encode json_decode render get post put patch delete resources scope middleware'
            },
            contains: [
                hljs.COMMENT('//', '$'),
                hljs.COMMENT('/\\*', '\\*/'),
                {
                    className: 'string',
                    begin: '"',
                    end: '"',
                    contains: [hljs.BACKSLASH_ESCAPE]
                },
                {
                    className: 'number',
                    begin: '-?\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b',
                    relevance: 0
                },
                {
                    className: 'title.function',
                    begin: 'fn\\s+[a-zA-Z_][a-zA-Z0-9_]*',
                    relevance: 10
                },
                {
                    className: 'title.function',
                    begin: '[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()',
                    relevance: 0
                },
                {
                    className: 'type',
                    begin: ':\\s*(Any|String|Int|Float|Bool|Array|Hash|Object|Request|Response)',
                    relevance: 2
                }
            ]
        };
    });

    document.addEventListener('DOMContentLoaded', function() {
        initHighlighting();
        scrollToActiveMenuItem();
    });

    document.addEventListener('livereload:update', initHighlighting);

    function scrollToActiveMenuItem() {
        const currentPath = window.location.pathname;

        // Find and activate links matching current URL in both sidebars
        document.querySelectorAll('.sidebar-link').forEach(link => {
            link.classList.remove('active', 'bg-indigo-500/10', 'text-indigo-400', 'font-medium');
            link.classList.add('text-gray-400', 'hover:bg-white/5', 'hover:text-white');

            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active', 'bg-indigo-500/10', 'text-indigo-400', 'font-medium');
                link.classList.remove('text-gray-400');
            }
        });

        // Scroll desktop nav to active item
        const desktopNav = document.getElementById('desktopNav');
        if (desktopNav) {
            const activeLink = desktopNav.querySelector('.sidebar-link.active');
            if (activeLink) {
                setTimeout(() => {
                    const linkTop = activeLink.offsetTop;
                    const navHeight = desktopNav.clientHeight;
                    desktopNav.scrollTop = linkTop - (navHeight / 2);
                }, 100);
            }
        }
    }

    function initHighlighting() {
        document.querySelectorAll('code.language-erb').forEach(function(block) {
            block.classList.remove('language-erb');
            block.classList.add('language-xml');
        });

        document.querySelectorAll('code[data-highlighted]').forEach(function(block) {
            block.removeAttribute('data-highlighted');
        });

        hljs.highlightAll();
    }
    </script>
</body>
