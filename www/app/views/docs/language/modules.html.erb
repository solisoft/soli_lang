                <p class="text-gray-400 mb-3">Makes a function, class, or constant available to other modules.</p>
<pre data-filename="math.sl"><code class="language-soli text-sm">// math.sl

// Private function (not exported)
fn validate_number(n: Int) -> Bool {
    return n >= 0;
}

// Exported functions
export fn add(a: Int, b: Int) -> Int {
    return a + b;
}

export fn subtract(a: Int, b: Int) -> Int {
    return a - b;
}

export fn multiply(a: Int, b: Int) -> Int {
    return a * b;
}

export fn divide(a: Int, b: Int) -> Float {
    if (b == 0) {
        panic("Division by zero");
    }
    return float(a) / float(b);
}

export fn factorial(n: Int) -> Int {
    if (n <= 1) {
        return 1;
    }
    return n * factorial(n - 1);
}</code></pre>
