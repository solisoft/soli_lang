                <pre data-filename="Example"><code class="language-soli text-sm">// Import all exports
import "./math.sl";
print(add(2, 3));        // 5
print(factorial(5));     // 120

// Named imports
import { add, multiply } from "./math.sl";
let sum = add(1, 2);          // 3
let product = multiply(3, 4); // 12

// Aliased imports
import { add as sum, multiply as times } from "./math.sl";
let result = sum(10, 20);  // 30
let doubled = times(5, 6); // 30

// Import everything with a namespace
import "./utils.sl" as utils;
let formatted = utils.format_date(DateTime.utc());</code></pre>
