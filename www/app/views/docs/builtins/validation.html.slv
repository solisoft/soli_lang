    "customer": V.hash({
        "name": V.string().required(),
        "email": V.string().required().email()
    }),
    "items": V.array(V.hash({
        "product_id": V.int().required(),
        "quantity": V.int().required().min(1)
    })).min(1)
}</code></pre>
