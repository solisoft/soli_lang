            <section id="use-case-api" class="scroll-mt-20 mb-6">
                <div class="rounded-xl bg-white/5 border border-white/10 p-5">
                    <a href="#use-case-api" class="group flex items-center gap-2 mb-3">
                        <code class="text-lg font-mono text-indigo-400">API Authentication</code>
                        <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 text-gray-500 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                        </svg>
                    </a>
                    <p class="text-gray-400 mb-3">Create Basic Auth credentials for HTTP requests.</p>
<pre data-filename="Example"><code class="language-soli text-sm">def basic_auth_header(username: String, password: String) -> String
    let credentials = username + ":" + password
    let encoded = Base64.encode(credentials)    "Basic " + encoded
end

# Usage
let header = basic_auth_header("user", "secret123")
# "Basic dXNlcjpzZWNyZXQxMjM="</code></pre>
                </div>
            </section>

