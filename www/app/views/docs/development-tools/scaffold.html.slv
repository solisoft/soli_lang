            <pre class="text-sm leading-7"><code class="language-soli"><span class="text-purple-400">class</span> <span class="text-yellow-200">UsersController</span> <span class="text-purple-400">&lt;</span> <span class="text-yellow-200">Controller</span> {
    <span class="text-purple-400">def</span> <span class="text-blue-400">index</span>(req: <span class="text-yellow-200">Any</span>) -> <span class="text-yellow-200">Any</span> {
