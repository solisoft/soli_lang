        <span class="text-blue-400">render</span>(<span class="text-green-400">"users/new"</span>, {
            <span class="text-green-400">"user"</span>: result,
            <span class="text-green-400">"title"</span>: <span class="text-green-400">"New User"</span>
        })
    }

    <span class="text-purple-400">def</span> <span class="text-blue-400">update</span>(req: <span class="text-yellow-200">Any</span>) -> <span class="text-yellow-200">Any</span> {
        <span class="text-purple-400">let</span> id = req[<span class="text-green-400">"params"</span>][<span class="text-green-400">"id"</span>];
        <span class="text-purple-400">let</span> permitted = <span class="text-purple-400">this</span>._permit_params(req[<span class="text-green-400">"params"</span>]);
        <span class="text-yellow-200">Users</span>.<span class="text-blue-400">update</span>(id, permitted);
        <span class="text-blue-400">redirect</span>(<span class="text-green-400">"/users"</span>)
    }

    <span class="text-purple-400">def</span> <span class="text-blue-400">delete</span>(req: <span class="text-yellow-200">Any</span>) -> <span class="text-yellow-200">Any</span> {
        <span class="text-purple-400">let</span> id = req[<span class="text-green-400">"params"</span>][<span class="text-green-400">"id"</span>];
        <span class="text-yellow-200">Users</span>.<span class="text-blue-400">delete</span>(id);
        <span class="text-blue-400">redirect</span>(<span class="text-green-400">"/users"</span>)
