{
  "name": "soli-mvc-app",
  "version": "1.0.0",
  "description": "Example Soli MVC application with TailwindCSS",
  "scripts": {
    "build:css": "tailwindcss -i ./app/assets/css/application.css -o ./public/css/application.css",
    "watch:css": "tailwindcss -i ./app/assets/css/application.css -o ./public/css/application.css --watch",
    "dev": "concurrently \"npm run watch:css\" \"soli serve .\"",
    "start": "soli serve ."
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.1"
  }
}
